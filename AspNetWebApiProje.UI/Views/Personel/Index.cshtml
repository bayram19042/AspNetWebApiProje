@model List<PersonelDto> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if(TempData["hata"]!=null)
            {
    <div class="alert alert-danger" role="alert">
        @TempData["hata"]
    </div>
            }
    <a class="btn btn-outline-info  mt-2" asp-action="Create">Personel Ekle</a>
   <hr />

    @if(Model != null && Model.Count>0) 
    {
<table class="table table-striped  mt-2">
    <thead class="bg-info text-white">
        <tr>
            <th>S.No</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th style="width:20%;">İşlemler</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>
                    <a class="btn btn-outline-info btn-sm mr-2" asp-action="Update" asp-route-id="@item.Id"><i class="fa fa-pencil-square-o mr-2" aria-hidden="true"></i>Güncelle</a>

                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash-o mr-2" aria-hidden="true"></i>Sil</a>
                </td>

            </tr>
        }
    </tbody>
</table>
    }
            else
            {
<div class="alert alert-danger" role="alert">
    Kayıt Bulunamadı...
</div>
            }
    
</div>


